<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_margin"
    tools:context=".AddItemActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/namePriceQuantityStyle"
                android:text="@string/item" />

            <TextView
                style="@style/namePriceQuantityStyle"
                android:layout_width="wrap_content"
                android:text="@string/price" />

            <TextView
                style="@style/namePriceQuantityStyle"
                android:text="@string/quantity" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/details_name"
                style="@style/DetailsFieldStyle"
                android:hint="@string/name" />

            <TextView
                android:id="@+id/details_price"
                style="@style/DetailsFieldStyle"
                android:hint="@string/price" />

            <TextView
                android:id="@+id/details_quantity"
                style="@style/DetailsFieldStyle"
                android:hint="@string/quantity" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/CategoryStyle"
            android:text="@string/category" />

        <TextView
            android:id="@+id/details_category"
            style="@style/AddItemFieldStyle"
            android:hint="@string/category"
            android:paddingStart="47dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="25dp">

        <TextView
            style="@style/CategoryStyle"
            android:text="@string/supplier" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="-5dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/details_supplier_name"
                style="@style/AddItemFieldStyle"
                android:hint="@string/name" />

            <TextView
                android:id="@+id/details_supplier_phone_number"
                style="@style/AddItemFieldStyle"
                android:autoLink="phone"
                android:hint="@string/phone_number" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>