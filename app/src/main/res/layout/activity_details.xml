<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="174dp"
    android:orientation="vertical"
    android:padding="@dimen/activity_margin"
    tools:context=".AddItemActivity"
    tools:layout_editor_absoluteY="81dp">


    <TextView
        android:id="@+id/details_name"
        style="@style/DetailsFieldStyle"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:hint="@string/name"
        android:textAlignment="center"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="@+id/details_price"
        app:layout_constraintStart_toStartOf="@+id/details_price" />


    <TextView
        android:id="@+id/textView2"
        style="@style/namePriceQuantityStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/price"
        android:textAlignment="viewStart"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/details_price"
        style="@style/DetailsFieldStyle"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:hint="@string/price"
        android:textAlignment="center"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="@+id/details_quantity"
        app:layout_constraintStart_toStartOf="@+id/details_quantity" />


    <TextView
        android:id="@+id/textView3"
        style="@style/namePriceQuantityStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/quantity"
        android:textAlignment="viewStart"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/decrease_button"
        android:layout_width="47dp"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:text="@string/decrease"
        app:layout_constraintBaseline_toBaselineOf="@+id/details_quantity"
        app:layout_constraintEnd_toStartOf="@+id/details_quantity"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/barrier2" />

    <TextView
        android:id="@+id/textView"
        style="@style/namePriceQuantityStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item"
        android:textAlignment="viewStart"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.06999999"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/details_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:hint="@string/quantity"
        android:textAlignment="center"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColorHint="@color/brightPink"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="@+id/details_category"
        app:layout_constraintStart_toStartOf="@+id/details_category" />

    <Button
        android:id="@+id/increase_button"
        android:layout_width="47dp"
        android:layout_height="38dp"
        android:layout_marginEnd="8dp"
        android:text="@string/increase"
        app:layout_constraintBaseline_toBaselineOf="@+id/details_quantity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/details_quantity" />


    <TextView
        android:id="@+id/textView4"
        style="@style/namePriceQuantityStyle"
        android:layout_width="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/category"
        android:textAlignment="viewStart"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/details_category"
        style="@style/DetailsFieldStyle"
        android:layout_width="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:hint="@string/category"
        android:textAlignment="center"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="@+id/details_supplier_name"
        app:layout_constraintStart_toStartOf="@+id/details_supplier_name" />


    <TextView
        android:id="@+id/textView5"
        style="@style/namePriceQuantityStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:gravity="center_vertical"
        android:paddingBottom="25dp"
        android:text="@string/supplier"
        android:textAlignment="viewStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/barrier2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/details_supplier_name"
        style="@style/DetailsFieldStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:hint="@string/name"
        android:textAlignment="center"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/barrier2" />

    <TextView
        android:id="@+id/details_supplier_phone_number"
        style="@style/DetailsFieldStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:autoLink="phone"
        android:hint="@string/phone_number"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/details_supplier_name"
        app:layout_constraintStart_toStartOf="@+id/details_supplier_name"
        app:layout_constraintTop_toBottomOf="@+id/details_supplier_name" />

    <Button
        android:id="@+id/call_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/call"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/details_supplier_phone_number"
        app:layout_constraintStart_toStartOf="@+id/details_supplier_phone_number"
        app:layout_constraintTop_toBottomOf="@+id/details_supplier_phone_number" />

    <android.support.constraint.Barrier
        android:id="@+id/barrier2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:barrierDirection="end"
        app:constraint_referenced_ids="textView,textView2,textView3,textView4,textView5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>